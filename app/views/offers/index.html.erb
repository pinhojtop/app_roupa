    <div class="card">
      <% @offers.each do |offer| %>
        <% if offer.photo.attached? %>
          <p class="card-img-top"><%= cl_image_tag offer.photo.key, height: 300, width: 400, crop: :fill %></p>
        <% else %>
          <p class="card-img-top"><%= image_tag("cabide.jpg")  %></p>
        <% end %>
      <div class="card-body">
        <p><%= link_to offer.name, offer_path(offer) %></p>

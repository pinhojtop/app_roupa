<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Offers</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price per Day</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @offers.each do |offer| %>
        <tr>
          <td><%= offer.name %></td>
          <td><%= offer.description %></td>
          <td><%= offer.price_per_day %></td>
          <td><%= link_to 'Show', offer %></td>
          <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
          <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <% if policy(Offer).create? %>
    <%= link_to 'New offer', new_offer_path %>
  <% end %>
</div>
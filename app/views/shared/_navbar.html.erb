<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div>
    <%= link_to offers_path, class: "navbar-brand" do %>
      <%= image_tag "https://image.flaticon.com/icons/png/512/80/80875.png" %>
      <% end %>
    <% if policy(Offer).create? %>
        <a class="btn btn-ghost" <%= link_to 'Empreste aqui', new_offer_path %> </a>
      <% end %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <span class="nav-link">
            <%= current_user.email %>
          </span>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://www.clipartmax.com/png/middle/112-1124080_monica-hernandez-facebook-avatar-woman.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Atualizar cadastro", edit_user_registration_path(current_user), class: "dropdown-item" %>
            <%= link_to "Minhas roupas", my_offers_path, class: "dropdown-item" %>
            <%= link_to "Roupas alugadas", my_rents_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
